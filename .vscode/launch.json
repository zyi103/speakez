    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach (Remote Debug)",
            "type": "python",
            "request": "attach",
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/var/webapp",
            "port": 3000,
            "secret": "my_secret",
            "host": "speakez.dev.ischool.syr.edu"
        },
        {
            "name": "Run Tests",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\speakez\\manage.py",
            "cwd": "${workspaceFolder}\\speakez",
            "args": [
                "test"
            ],
            "django": true
        },
        {
            "name": "Run Server",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\speakez\\manage.py",
            "cwd": "${workspaceFolder}\\speakez",
            "args": [
                "runserver"
            ],
            "django": true
        },
        {
            "name": "Run Shell",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\speakez\\manage.py",
            "cwd": "${workspaceFolder}\\speakez",
            "args": [
                "shell"
            ],
            "django": true
        }
    ]
}